@model Impact.Website.Models.LoginViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="container">
	<div class="jumbotron">
		<h1>Overtime Analyser</h1>
	</div>
	<div class="row">
		<div class="col-md-3">
			@using (Html.BeginForm())
			{
				<form class="form-horizontal">
					<div class="form-group">
						@Html.LabelFor(u => u.Username)
						@Html.EditorFor(u => u.Username, new {htmlAttributes = new {@class = "form-control", placeholder = "Initialer"}})
						@Html.ValidationMessageFor(u => u.Username)
					</div>
					<div class="form-group">
						@Html.LabelFor(u => u.Password)
						@Html.PasswordFor(u => u.Password, new {@class = "form-control", placeholder = "Password"})
						@Html.ValidationMessageFor(u => u.Password)
					</div>
					<button type="submit" class="btn btn-primary">Login</button>
				</form>
			}			
		</div>
		<div class="col-md-9">
			@if (!string.IsNullOrEmpty(Model.Message))
			{
				<label style="color: transparent">w</label>
				<div class="alert alert-warning" role="alert">
					@Html.Raw(Model.Message)
				</div>
			}
		</div>
	</div>
</div>