@using Impact.Core.Constants
@model Impact.Website.Models.SiteViewModel
@{
	ViewBag.Title = "Vælg side";
}

<div class="container">
	<div class="jumbotron">
		<h1>Velkommen @Model.FullName</h1>
	</div>
	<div class="row">
		@if ((bool?) Session[ApplicationConstants.SessionName.IsDeveloper] ?? false)
		{
			<div class="col-md-4">
				<div class="jumbotron">
					<h2>Overarbejde Analyse</h2>
					<p>Denne sider giver dig en analyse af dine arbejdstimer med et fokus på overarbejde.</p>
					<p>Her kigges på alle arbejdstimer i det nuværende kvartal.</p>
					<p>Du kan bl.a. se hvor mange timer du har arbejdet for lidt eller formeget. Du kan se forskellen på de timer der er registreret og de der bliver udbetalt som overarbejde.</p>
					@Html.ActionLink("Analyser!", "Index", "Overtime", null, new {@class = "btn btn-primary"})
				</div>
			</div>
			
			<div class="col-md-4">
				<div class="jumbotron">
					<h2>Demo overabejde Analyse</h2>
					<p>Denne sider lader dig lege med overarbejdsberegnere.</p>
					<p>Har du svært ved at forstå hvordan overarbejde beregnes? Så kan du selv prøve at indsætte nogle tal og se resultatet.</p>
					@Html.ActionLink("Analyser!", "Index", "DemoOvertime", null, new {@class = "btn btn-primary"})
				</div>
			</div>
		}
		<div class="col-md-4">
			<div class="jumbotron">
				<h2>Fed torsdags / R&D Analyse</h2>
				<p>Denne side giver dig et overblik over alle dine registrerede fed torsdags / R&D timer med et fokus på din "saldo"</p>
				<p>Du kan her finde ud af om du har fed torsdags timer til gode, eller har brugt flere end tiltænkt.</p>
				@Html.ActionLink("Analyser!", "Index", "AwesomeThursday", null, new {@class = "btn btn-primary"})
			</div>
		</div>
		<div class="col-md-4">
			<div class="jumbotron">
				<h2>Ferieoversigt</h2>
				<p>Mangler du et godt overblik over hvor mange ferie og feriefridage du har registreret i ferieåret?</p>
				<p>Du kan se hvor mange dage / timer ferie og feriefridage du kan registrere i ferieåret, eller om du har registreret mere end tilgængeligt.</p>
				@Html.ActionLink("Få overblik", "Index", "Vacation", null, new {@class = "btn btn-primary"})
			</div>
		</div>
	</div>
</div>
<script>
	function execute(element) {
		element.innerHTML = "Not yet!";
		element.classList.add("disabled");
	}
</script>